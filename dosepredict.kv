    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y:.1
            Label:
                
                text:'Just some annoying text'
    
        TabbedPanel:
            id:tabs
            size_hint: 1, .8
            pos_hint: {'center_x': .5, 'center_y': .5}
            do_default_tab: False
            
            
            TabbedPanelItem:
                text:'Manual input'
                ScrollView:
                    BoxLayout:
                        orientation:'vertical'
                        GridLayout:
                            id:bt_input
                        GridLayout:
                            id:dd_input
                            cols:2


            TabbedPanelItem:
                text:'xls input'
                BoxLayout:
                    Label:
                        text:'medboxxy'

            TabbedPanelItem:
                text:'Fit to raw data'
                BoxLayout:
                    size_hint_y:.1
                    orientation:'horizontal'
                    Label:
                        size_hint_x:.2
                        text:'Input file:'
                    TextInput:
                        text:'optima_ge_660_raw'
                    Button:
                        text:'Select'
                    ScrollView:
                        BoxLayout:
                            orientation:'vertical'
                            GridLayout:
                                cols:3
                            GridLayout:
                                cols:2

    
    
            TabbedPanelItem:
                text:'testy'
                BoxLayout:
                    id:testy
                    Button:
                        text:'make test'
                        on_release:root.testy()
                    BoxLayout:
                        id:holder




        BoxLayout:
            size_hint_y:.1
            Label:
                size_hint_x:.2
                text:'Fit name:'
            
                
            TextInput:
                size_hint_x:.3
                text:'default_ge_optima_660'
            Button:
                size_hint_x:.1
                text:'Select'
            Button:
                size_hint_x:.2
                text:'Predict \& Plot'
            Button:
                size_hint_x:.2
                text:'Predict'



    
<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            title:' '
            id: dirchooser
            path: '.'
            filters:[root.is_dir]
            dirselect: True
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(dirchooser.path, dirchooser.selection)
    


            

            
        
    
    